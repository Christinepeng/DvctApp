<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <item android:gravity="center">
        <shape android:shape="oval">

            <stroke
                android:width="1dp"
                android:color="@color/appBlue" />

            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:gravity="center"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval">

            <solid android:color="@color/appBlue" />

        </shape>
    </item>

</layer-list>