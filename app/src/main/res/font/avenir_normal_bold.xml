<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Book -->
    <font
        android:font="@font/avenir_book"
        android:fontStyle="normal"
        android:fontWeight="300"

        app:font="@font/avenir_book"
        app:fontStyle="normal"
        app:fontWeight="300" />

    <!--Normal -->
    <font
        android:font="@font/avenir_roman"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/avenir_roman"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!--Medium -->
    <font
        android:font="@font/avenir_medium"
        android:fontStyle="normal"
        android:fontWeight="500"

        app:font="@font/avenir_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />

    <!--Bold -->
    <font
        android:font="@font/avenir_black"
        android:fontStyle="normal"
        android:fontWeight="700"

        app:font="@font/avenir_black"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <!--Black, Extra Bold or Heavy -->
    <font
        android:font="@font/avenir_heavy"
        android:fontStyle="normal"
        android:fontWeight="800"

        app:font="@font/avenir_heavy"
        app:fontStyle="normal"
        app:fontWeight="800" />
</font-family>