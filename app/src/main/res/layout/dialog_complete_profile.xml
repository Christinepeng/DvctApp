<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/item_inte_cardview_img_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shape="ring"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="9dp"
        app:cardCornerRadius="4dp"
        android:layout_marginStart="40dp"
        app:cardElevation="0dp">

        <com.divercity.app.core.ui.AnimateHorizontalProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            app:ahp_backgroundColor="@color/grey"
            app:ahp_progressColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/avenir_book"
            android:text="20%"
            android:textColor="@android:color/black" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_like" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_heavy"
        android:layout_marginTop="26dp"
        android:lineSpacingExtra="5dp"
        android:gravity="center_horizontal"
        android:textColor="#3198e5"
        android:textSize="20sp"
        android:text="Great Job on Completing your Profile!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_book"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="5dp"
        android:gravity="center_horizontal"
        android:textColor="#333241"
        android:textSize="20sp"
        android:text="Letâ€™s get you started on your Divercity experience now." />

    <Button
        android:id="@+id/dlg_cmpl_prf_btn_thanks"
        style="@style/AppText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/shape_backgrd_round_blue2"
        android:fontFamily="@font/avenir_medium"
        android:layout_marginBottom="9dp"
        android:padding="18dp"
        android:text="Thanks a lot!"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>