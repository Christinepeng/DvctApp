<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_backgrd_round1"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/confirm_email"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_heavy"
        android:text="Confirm Email"
        android:textColor="#333241"
        android:textSize="22sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/confirm_email_description"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:text="An email has been sent with instructions \n To reset your password"
        android:textColor="#333241"
        android:lineSpacingExtra="3sp"
        android:layout_marginTop="15dp"
        android:textSize="14.5sp" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:textColor="@color/appBlue"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>