<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:lineSpacingExtra="7sp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:textColor="#333241"
        android:text="Create a New Password"
        android:layout_marginTop="29dp" />

    <RelativeLayout
        android:id="@+id/frameLayout_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:visibility="visible"
        android:layout_marginTop="30dp"
        android:layout_marginStart="33dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/icon_login_password"/>

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_roman"
            android:hint="New Password"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:padding="24dp"
            android:layout_marginStart="35dp"
            android:textColor="#333241"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0" />

    <RelativeLayout
        android:id="@+id/frameLayout_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_marginStart="33dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/icon_login_password"/>

        <EditText
            android:id="@+id/et_confirm_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_roman"
            android:hint="Confirm Password"
            android:imeOptions="actionDone"
            android:padding="24dp"
            android:layout_marginStart="35dp"
            android:textColor="#333241"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_password"
        style="@style/AppText"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_backgrd_round_blue2"
        android:fontFamily="@font/avenir_medium"
        android:padding="10dp"
        android:layout_marginTop="35dp"
        android:text="create password"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

