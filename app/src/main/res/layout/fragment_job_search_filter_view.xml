<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_job_search_filter"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="15dp"
        android:src="@drawable/back"
        android:tint="@color/appBlack"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/avenir_medium"
        android:lineSpacingExtra="2sp"
        android:text="View"
        android:textColor="#333241"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <View style="@style/Divider" />

        <RelativeLayout
            android:id="@+id/lay_all"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_select_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:clickable="false"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:src="@drawable/selector_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="52dp"
                android:fontFamily="@font/avenir_medium"
                android:text="All"
                android:textColor="#333241"
                android:textSize="15sp" />

        </RelativeLayout>

        <View style="@style/RecyclerViewDivider" />

        <RelativeLayout
            android:id="@+id/lay_recommended"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_select_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:clickable="false"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:src="@drawable/selector_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="52dp"
                android:fontFamily="@font/avenir_medium"
                android:text="Recommended"
                android:textColor="#333241"
                android:textSize="15sp" />

        </RelativeLayout>

        <View style="@style/RecyclerViewDivider" />

        <RelativeLayout
            android:id="@+id/lay_new"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_select_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:clickable="false"
                android:focusable="false"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:src="@drawable/selector_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="52dp"
                android:fontFamily="@font/avenir_medium"
                android:text="New"
                android:textColor="#333241"
                android:textSize="15sp" />

        </RelativeLayout>

        <View style="@style/RecyclerViewDivider" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>