<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#87caff"
        android:lineSpacingExtra="35sp"
        android:text="Welcome to Divercity"
        android:layout_marginTop="55dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#87caff"
        android:lineSpacingExtra="35sp"
        android:layout_gravity="center_horizontal"
        android:text="Alexander!" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#333241"
        android:lineSpacingExtra="5sp"
        android:layout_gravity="center_horizontal"
        android:text="Which of these describe you best? \n
Please select up to two options"
        android:layout_marginTop="6dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="21sp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp">

                <ImageView
                    android:id="@+id/btn_job_seeker"
                    android:layout_width="130dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_type_job_seeker"
                    android:paddingTop="8dp"/>

                <ImageView
                    android:src="@drawable/user_type_rounded_corner"
                    android:layout_width="140dp"
                    android:layout_height="133dp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333241"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center_horizontal"
                android:text="Professional/Job Seeker"
                android:layout_marginTop="7.2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="21sp"
            android:layout_marginStart="28dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp">

                <ImageView
                    android:id="@+id/btn_student"
                    android:layout_width="130dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_type_student"
                    android:paddingTop="8dp"/>

                <ImageView
                    android:src="@drawable/user_type_rounded_corner"
                    android:layout_width="140dp"
                    android:layout_height="133dp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333241"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center_horizontal"
                android:text="Student"
                android:layout_marginTop="7.2dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="21sp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp">

                <ImageView
                    android:id="@+id/btn_recruiter"
                    android:layout_width="130dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_type_recruiter"
                    android:paddingTop="8dp"/>

                <ImageView
                    android:src="@drawable/user_type_rounded_corner"
                    android:layout_width="140dp"
                    android:layout_height="133dp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333241"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center_horizontal"
                android:text="Hiring Manager/Recruiter"
                android:layout_marginTop="7.2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="21sp"
            android:layout_marginStart="28dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp">

                <ImageView
                    android:id="@+id/btn_entrepreneur"
                    android:layout_width="130dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/user_type_entrepreneur"
                    android:paddingTop="8dp"/>

                <ImageView
                    android:src="@drawable/user_type_rounded_corner"
                    android:layout_width="140dp"
                    android:layout_height="133dp" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333241"
                android:lineSpacingExtra="5sp"
                android:layout_gravity="center_horizontal"
                android:text="Entrepreneur"
                android:layout_marginTop="7.2dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>