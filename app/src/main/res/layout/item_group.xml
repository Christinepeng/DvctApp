<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:shape="ring"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_group_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            tools:background="@android:color/black" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_group_txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/avenir_medium"
        android:textColor="#333241"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/item_group_txt_members"
        app:layout_constraintEnd_toStartOf="@+id/checkbox_group_btn_join_member"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cardview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Blacks in Tech Blacks in Tech Blacks in Tech Blacks in Tech Blacks in Tech" />

    <TextView
        android:id="@+id/item_group_txt_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/avenir_book"
        android:lineSpacingExtra="-2sp"
        android:textColor="#80333241"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_group_txt_title"
        app:layout_constraintTop_toBottomOf="@+id/item_group_txt_title"
        tools:text="293 Members"
        android:visibility="gone"/>

    <CheckBox
        android:id="@+id/checkbox_group_btn_join_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/avenir_medium"
        android:minHeight="30dip"
        android:buttonTint="#a4a4b3"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/item_group_btn_join_member"
        style="@style/AppText"
        android:layout_width="60dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/avenir_medium"
        android:minHeight="30dip"
        android:text="Join"
        android:textAllCaps="false"
        android:textColor="#a4a4b3"
        android:textSize="17sp"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toEndOf="@+id/checkbox_group_btn_join_member"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>