<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn_select_unselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="20dp"
        android:src="@drawable/selector_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/item_inte_cardview_img_main"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:shape="ring"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_select_unselect"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_group_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            tools:background="@android:color/black" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/item_group_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/avenir_medium"
        android:textColor="#333241"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/item_group_txt_members"
        app:layout_constraintEnd_toStartOf="@+id/item_group_btn_join_member"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_inte_cardview_img_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Blacks in Tech" />

    <TextView
        android:id="@+id/item_group_txt_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/avenir_book"
        android:lineSpacingExtra="-2sp"
        android:textColor="#80333241"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_group_txt_title"
        app:layout_constraintTop_toBottomOf="@+id/item_group_txt_title"
        tools:text="293 Members" />

</android.support.constraint.ConstraintLayout>