    <ImageView
        android:id="@+id/img_recruiter"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_view"
        app:layout_constraintTop_toBottomOf="@+id/card_view"
        tools:background="@android:color/black" />

    <TextView
        android:id="@+id/txt_recruiter_name"
        style="@style/AppText5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:maxLines="4"
        app:layout_constraintBottom_toBottomOf="@+id/img_recruiter"
        app:layout_constraintEnd_toStartOf="@+id/txt_recruiter_occup"
        app:layout_constraintStart_toEndOf="@+id/img_recruiter"
        app:layout_constraintTop_toTopOf="@+id/img_recruiter"
        tools:text="Kyle Webber Campo dssfsdfsdfdfgdfgdfgdfgdfgdfgdfgdfgdfgsdfsdfsdfsdfsdf dsfsdfsdfsdfsdfsdfsd" />

    <TextView
        android:id="@+id/txt_recruiter_occup"
        style="@style/AppText5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="4"
        app:layout_constraintBottom_toBottomOf="@+id/txt_recruiter_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_recruiter_name"
        app:layout_constraintTop_toTopOf="@+id/txt_recruiter_name"
        tools:text="sdffsdfsdfsdfsdfsdfsdfsdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfgdfsdfsdfsfdfsdf" />

    <!--</LinearLayout>-->

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn_job_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@id/card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_view"
        tools:src="@drawable/btn_apply" />

</android.support.constraint.ConstraintLayout>