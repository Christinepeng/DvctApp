<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbl_personal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/avenir_heavy"
            android:text="@string/personal"
            android:textColor="#333241"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/btn_edit_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:padding="16dp"
            android:src="@drawable/ic_edit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingStart="14dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_calendar" />

        <TextView
            android:id="@+id/txt_resume"
            style="@style/AppText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:hint="@string/view_resume"
            android:paddingTop="17dp"
            android:paddingBottom="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_hat" />

        <TextView
            android:id="@+id/txt_subtitle2"
            style="@style/AppText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/school" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_occupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_briefcase_grey" />

        <TextView
            android:id="@+id/txt_occupation"
            style="@style/AppText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/occupation" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_map_pin" />

        <TextView
            android:id="@+id/txt_location"
            style="@style/AppText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/location" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_user" />

        <TextView
            android:id="@+id/txt_gender"
            style="@style/AppText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/gender" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_ethnicity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingStart="14dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_globe" />

        <TextView
            android:id="@+id/txt_ethnicity"
            style="@style/AppText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:hint="@string/ethnicity"
            android:paddingTop="17dp"
            android:paddingBottom="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_age_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_gift" />

        <TextView
            android:id="@+id/txt_age_range"
            style="@style/AppText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/age_range" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:visibility="visible"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tab_communities_inactive" />

        <TextView
            android:id="@+id/txt_view_groups"
            style="@style/AppText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/view_groups" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_interests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:visibility="visible"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_heart" />

        <TextView
            android:id="@+id/txt_view_interests"
            style="@style/AppText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/view_interests" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_companies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_briefcase_grey" />

        <TextView
            android:id="@+id/txt_view_companies"
            style="@style/AppText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/view_companies" />

    </LinearLayout>

</LinearLayout>