<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/appText1</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/ll_app_background</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="ProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/loading</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@color/appText1</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/appBlue</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="RatingBar2" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/appBlue</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
    </style>

    <style name="AppText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppText1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppText2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/avenir_roman</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppText3" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@color/appBlue</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppText4" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/avenir_heavy</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppText5" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textColor">@color/grey3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppText6" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/avenir_book</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppText.White" parent="AppText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="RecyclerViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="AppSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="DialogFullScreen" parent="android:Theme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
