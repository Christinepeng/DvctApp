<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/appText1</item>
        <!--<item name="android:itemBackground">@color/colorPrimaryDark</item>-->
        <item name="cardViewStyle">@style/CardView</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="ProgressBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/loading</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/avenir_medium</item>
    </style>

    <style name="AppText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppText1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppText2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/avenir_roman</item>
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppText.White" parent="AppText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>



</resources>
